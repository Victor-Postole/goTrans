<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="activities.NotificationProfile"
    android:id="@+id/notificationProfileId"
    android:background="@color/darkBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/notification_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_notification"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/nav_custom_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="60dp"
                android:paddingTop="5dp"
                android:text="@string/title_dashboard"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:background="#EFEFEF" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_title_expeditie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                    <include layout="@layout/fragment_expeditii_derulare"/>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_expeditii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/lightGray"
            android:layout_marginTop="35dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_masini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masini" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_soferi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soferi" />
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewrPagerTabItems"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"></androidx.viewpager.widget.ViewPager>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
