<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="NavigationViewStyle">
        <item name="android:textSize">12dp</item> <!-- menu item text size-->
        <item name="android:textColor">@color/darkBlue</item> <!-- menu item text size-->
        <item name="android:textStyle">normal</item> <!-- menu item text size-->
    </style>


    <style name="NavigationViewStyleBottom">
        <item name="android:textSize">8dp</item> <!-- menu item text size-->
        <item name="android:textColor">@color/gray</item> <!-- menu item text size-->
        <item name="android:textStyle">normal</item> <!-- menu item text size-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
